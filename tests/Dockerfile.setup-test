FROM ubuntu:24.04

# Prevent interactive prompts during package installation
ENV DEBIAN_FRONTEND=noninteractive

# Update package list and install essential packages
RUN apt-get update && apt-get install -y \
    git \
    curl \
    wget \
    sudo \
    python3 \
    python3-pip \
    ansible \
    software-properties-common \
    apt-transport-https \
    ca-certificates \
    gnupg \
    lsb-release \
    && rm -rf /var/lib/apt/lists/*

# Create test user with proper home directory
RUN useradd -m -s /bin/bash testuser

# Add testuser to sudo group and configure passwordless sudo
RUN usermod -aG sudo testuser && \
    echo "testuser ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers

# Set up proper directory structure for testuser
USER testuser
WORKDIR /home/testuser

# Clone public-scripts repository during build
RUN git clone https://github.com/joelagnel/public-scripts.git /home/testuser/public-scripts

# Set the working directory to where setup-dev-env.sh will run
WORKDIR /home/testuser/public-scripts

# Default command - just keep container running
CMD ["/bin/bash"]